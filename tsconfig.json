{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictBuiltinIteratorReturn": false,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "typeRoots": [
      "./node_modules/@confluentinc/kafka-javascript/types/*",
      "./node_modules/@types"
    ]
  },
  "exclude": ["node_modules", "dist", "build", "canary", "test", "example"]
}
