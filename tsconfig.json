{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "esModuleInterop": true,
    "lib": ["esnext"],
    
  },
  "exclude": ["node_modules", "dist", "build", "canary", "test", "example"],
  
}
