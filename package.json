{
  "name": "nestjs-kafka-module",
  "version": "2.0.1",
  "description": "A NestJS module wrapper for node-rdkafka.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12.15.0"
  },
  "scripts": {
    "prebuild": "rimraf dist .tsbuildinfo",
    "build": "tsc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand --detectOpenHandles",
    "test:ci": "jest --runInBand --detectOpenHandles",
    "test:cov": "jest --runInBand --coverage --detectOpenHandles",
    "test:watch": "jest --runInBand --watch --detectOpenHandles",
    "prepare": "husky",
    "commit": "git cz",
    "prettier": "prettier --write .",
    "start:example": "nest start -c example/nest-cli.standalone.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreacioni/nestjs-kafka-module.git"
  },
  "author": "Andrea Cioni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andreacioni/nestjs-kafka-module/issues"
  },
  "homepage": "https://github.com/andreacioni/nestjs-kafka-module#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "19.5.0",
    "@nestjs/common": "10.4.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "10.4.3",
    "@nestjs/platform-express": "10.4.3",
    "@nestjs/testing": "10.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/jest": "29.5.12",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "commitizen": "^4.3.0",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "semantic-release": "^24.0.0",
    "testcontainers": "^10.7.1",
    "ts-jest": "29.2.5",
    "typescript": "5.6.2"
  },
  "dependencies": {
    "node-rdkafka": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": "spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "roots": [
      "./src/",
      "./test/"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "testTimeout": 60000
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "beta",
        "channel": "beta"
      }
    ],
    "repositoryUrl": "https://github.com/andreacioni/nestjs-kafka-module"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
